{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}
{% block stylesheets %}
<link href="{{ asset('../templates/goods/index.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body %}



<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Категория</th>
            <th scope="col">Время чистки</th>
            <th scope="col">Цена</th>
            <th scope="col">Старая цена</th>
            <th scope="col">Ед. измерения</th>
          </tr>
        </thead>
        <tbody>
          {% for good in goods_array.goods %}
            <tr>
              <th scope="row">{{ good.id }}</td>
              <td> {{ good.title }} </td>
              <td> {{ good.category.title }} </td>
              <td> {{ good.time_clean }} </td>
              <td> {{ good.price }} </td>
              <td> {{ good.old_price }} </td>
              <td> {{ good.unit }} </td>
            </tr>
          {% endfor %}
        </tbody>
        <table>
      </div>
    </div>
  </div>

{% endblock %}
{% block javascripts %}
<script src="{{ asset('../templates/goods/index.js') }}"></script>
{% endblock %}
